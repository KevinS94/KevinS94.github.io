  <script>
    // ====== Assets: pas paden/bestanden aan ======
    const ASSETS = {
      // verdachtenfiches (images)
      suspects: [
        { name:"Frans Pijpers",  group:"Pijpers",    status:"VERIFIED", img:"img/fiches/frans-pijpers.png" },
        { name:"Petra Pijpers",  group:"Pijpers",    status:"VERIFIED", img:"img/fiches/petra-pijpers.png" },
        { name:"Roy Pijpers",    group:"Pijpers",    status:"NEW",      img:"img/fiches/roy-pijpers.png" },

        { name:"Huub Van Kessel", group:"Van Kessel", status:"NEW",     img:"img/fiches/huub-van-kessel.png" },
        { name:"Riet Van Kessel", group:"Van Kessel", status:"NEW",     img:"img/fiches/riet-van-kessel.png" },
        { name:"Denny Van Kessel",group:"Van Kessel", status:"FLAGGED", img:"img/fiches/denny-van-kessel.png" },

        { name:"Pierre Savelkoul", group:"Savelkoul", status:"NEW",     img:"img/fiches/pierre-savelkoul.png" },
        { name:"Yvonne Savelkoul", group:"Savelkoul", status:"NEW",     img:"img/fiches/yvonne-savelkoul.png" },
        { name:"Ger Savelkoul",    group:"Savelkoul", status:"NEW",     img:"img/fiches/ger-savelkoul.png" },
      ],

      // PV / lijkrapport (tekst is spelversie placeholder)
      pv: {
        docNo: "PV-MBR-25-0217-01",
        date: "2026-01-01",
        officer: "Inspecteur J. van Dijk",
        location: "’t Smedenhuys — bureau (gelijkvloers)",
        summary: "Slachtoffer aangetroffen levenloos. Plaats vastgesteld, perimeter ingesteld, eerste vaststellingen genoteerd. Verdere forensische verwerking volgt.",
        timeline: [
          { t: "02:32", d: "Melding ontvangen via security." },
          { t: "03:41", d: "Eerste patrouille ter plaatse." },
          { t: "03:58", d: "Bureau veiliggesteld, toegang beperkt." }
        ]
      },

      // Security ID tag afbeelding
      securityTagImg: "img/security-tag.png", // <- vervang met jouw tag afbeelding

      // Plattegrond: 2 kleinere images naast elkaar
      mapA: "img/mapA.png", // <- vervang
      mapB: "img/mapB.png", // <- vervang

      // Bewijsfoto: inhoud portefeuile
      wallet: "img/wallet-inhoud.png", // <- vervang

      // Audio: ondervraging Pierre
      pierreAudio: "audio/pierre.mp3" // <- vervang (mp3/wav/ogg ok)
    };

    const view = document.getElementById("view");
    const nav = document.getElementById("nav");
    const lastUpdate = document.getElementById("lastUpdate");
    lastUpdate.textContent = new Date().toLocaleString("nl-BE", { hour12:false });

    function chipClass(s){
      if (s === "VERIFIED") return "ok";
      if (s === "FLAGGED") return "bad";
      return "warn";
    }

    function setActive(key){
      nav.querySelectorAll("button").forEach(b=>{
        b.classList.toggle("active", b.getAttribute("data-view") === key);
      });
    }

    function renderOverview(){
      view.innerHTML = `
        <div class="block">
          <h3>Case snapshot</h3>
          <div class="kv">
            <div class="k">Case ID</div><div class="v mono">MBR-25-0217</div>
            <div class="k">Locatie</div><div class="v">’t Smedenhuys</div>
            <div class="k">Set</div><div class="v">Verdachten + PV + ID tag + plattegrond (2) + wallet foto + audio</div>
            <div class="k">Beleid</div><div class="v">Geen externe links. Gebruik terminal voor navigatie.</div>
          </div>
          <div class="chips">
            <span class="chip warn">ACTIVE</span>
            <span class="chip">CHAIN-OF-CUSTODY</span>
            <span class="chip">RESTRICTED</span>
          </div>
        </div>

        <div class="block">
          <h3>Notities</h3>
          <div class="doc">
            <div class="hdr">
              <div class="t1">Opsporing — werkafspraken</div>
              <div class="t2 mono">SYS/CASE/LOCAL</div>
            </div>
            <div class="section">
              <div class="label">Gebruik</div>
              <div class="value">Deze pagina bevat enkel kernstukken voor het spel. Volledige dossierinhoud is niet opgenomen.</div>
            </div>
            <div class="section">
              <div class="label">Navigatie</div>
              <div class="value">Keer terug naar de terminal om andere systemen te benaderen.</div>
            </div>
          </div>
        </div>
      `;
    }

    function renderSuspects(){
      const cards = ASSETS.suspects.map(s => `
        <div class="suspect-card">
          <div class="suspect-top">
            <div>
              <h3 class="suspect-name">${s.name}</h3>
              <div class="suspect-meta">${s.group}</div>
            </div>
            <span class="chip ${chipClass(s.status)}">${s.status}</span>
          </div>

          <div class="thumb" data-img="${s.img}" data-title="${s.name}">
            <img src="${s.img}" alt="Fiche — ${s.name}" loading="lazy">
          </div>

          <div class="mono">Click to open full file</div>
        </div>
      `).join("");

      view.innerHTML = `
        <div class="block">
          <h3>Verdachten — Persoondossiers</h3>
          <div class="suspect-grid">${cards}</div>
        </div>
      `;

      view.querySelectorAll(".thumb").forEach(el=>{
        el.addEventListener("click", ()=>{
          openModal(el.getAttribute("data-img"), el.getAttribute("data-title"));
        });
      });
    }

    function renderPV(){
      const PV = ASSETS.pv;
      view.innerHTML = `
        <div class="block">
          <h3>Lijkrapport / Proces-verbaal</h3>
          <div class="doc">
            <div class="hdr">
              <div>
                <div class="t1">Proces-verbaal van eerste vaststellingen</div>
                <div class="t2">Documentnr: <span class="mono">${PV.docNo}</span></div>
              </div>
              <div class="t2" style="text-align:right">
                Datum: <span class="mono">${PV.date}</span><br/>
                Opsteller: <span class="mono">${PV.officer}</span>
              </div>
            </div>

            <div class="section">
              <div class="label">Locatie</div>
              <div class="value">${PV.location}</div>
            </div>

            <div class="section">
              <div class="label">Samenvatting</div>
              <div class="value">${PV.summary}</div>
            </div>

            <div class="section">
              <div class="label">Tijdlijn (kern)</div>
              <div class="value">
                ${PV.timeline.map(x => `<div class="mono">${x.t}</div> ${x.d}`).join("<br/><br/>")}
              </div>
            </div>

            <div class="section">
              <div class="label">Opmerking</div>
              <div class="value">Vervang deze tekst door jouw echte PV/lijkrapport (spelversie) indien nodig.</div>
            </div>
          </div>
        </div>
      `;
    }

    function renderID(){
      view.innerHTML = `
        <div class="block">
          <h3>Identiteitskaart — Security (Tag)</h3>

          <div class="imgframe">
            <img src="${ASSETS.securityTagImg}" alt="Security tag"
                 onerror="this.closest('.imgframe').nextElementSibling.textContent='Afbeelding niet gevonden. Controleer pad: ${ASSETS.securityTagImg}'; this.style.display='none';" />
          </div>

          <div class="caption" id="idcap">
            Security tag / badge. Bestand: <span class="mono">${ASSETS.securityTagImg}</span>
          </div>
        </div>
      `;
    }

    function renderMap(){
      view.innerHTML = `
        <div class="block">
          <h3>Plattegrond — ’t Smedenhuys</h3>

          <div class="mapgrid">
            <div class="imgframe">
              <img src="${ASSETS.mapA}" alt="Plattegrond A"
                   onerror="this.closest('.imgframe').nextElementSibling.textContent='Afbeelding niet gevonden. Controleer pad: ${ASSETS.mapA}'; this.style.display='none';" />
              <div class="caption">Bestand: <span class="mono">${ASSETS.mapA}</span></div>
            </div>

            <div class="imgframe">
              <img src="${ASSETS.mapB}" alt="Plattegrond B"
                   onerror="this.closest('.imgframe').nextElementSibling.textContent='Afbeelding niet gevonden. Controleer pad: ${ASSETS.mapB}'; this.style.display='none';" />
              <div class="caption">Bestand: <span class="mono">${ASSETS.mapB}</span></div>
            </div>
          </div>
        </div>
      `;
    }

    function renderWallet(){
      view.innerHTML = `
        <div class="block">
          <h3>Bewijsfoto — Inhoud portefeuile slachtoffer</h3>
          <div class="imgframe">
            <img src="${ASSETS.wallet}" alt="Portefeuile-inhoud"
                 onerror="this.closest('.imgframe').nextElementSibling.textContent='Afbeelding niet gevonden. Controleer pad: ${ASSETS.wallet}'; this.style.display='none';" />
          </div>
          <div class="caption" id="walletcap">
            Foto genomen bij eerste vaststellingen. Bestand: <span class="mono">${ASSETS.wallet}</span>
          </div>
        </div>
      `;
    }

    function renderPierre(){
      view.innerHTML = `
        <div class="block">
          <h3>Ondervraging — Pierre Savelkoul</h3>

          <div class="audio-wrap">
            <audio controls preload="metadata">
              <source src="${ASSETS.pierreAudio}" type="audio/mpeg" />
              <source src="${ASSETS.pierreAudio}" type="audio/ogg" />
              <source src="${ASSETS.pierreAudio}" type="audio/wav" />
              Je browser ondersteunt geen audio element.
            </audio>

            <div class="audio-meta">
              Bestand: <span class="mono">${ASSETS.pierreAudio}</span><br/>
              Opmerking: als het niet afspeelt, controleer het pad + bestandsnaam, en probeer eventueel mp3 of ogg.
            </div>
          </div>

          <div class="chips">
            <span class="chip">INTERVIEW</span>
            <span class="chip warn">UNTRANSCRIBED</span>
            <span class="chip">EVIDENCE AUDIO</span>
          </div>
        </div>
      `;
    }

    function render(key){
      setActive(key);
      if (key === "overview") return renderOverview();
      if (key === "suspects") return renderSuspects();
      if (key === "pv") return renderPV();
      if (key === "id") return renderID();
      if (key === "map") return renderMap();
      if (key === "wallet") return renderWallet();
      if (key === "pierre") return renderPierre();
      renderOverview();
    }

    nav.addEventListener("click", (e) => {
      const btn = e.target.closest("button[data-view]");
      if (!btn) return;
      render(btn.getAttribute("data-view"));
    });

    // ===== Modal logic =====
    const modal = document.getElementById("modal");
    const modalImg = document.getElementById("modalImg");
    const modalTitle = document.getElementById("modalTitle");
    const modalClose = document.getElementById("modalClose");

    function openModal(src, title){
      modalImg.src = src;
      modalImg.alt = title;
      modalTitle.textContent = title;
      modal.classList.add("open");
      modal.setAttribute("aria-hidden", "false");
    }

    function closeModal(){
      modal.classList.remove("open");
      modal.setAttribute("aria-hidden", "true");
      modalImg.src = "";
    }

    modalClose.addEventListener("click", closeModal);
    modal.addEventListener("click", (e) => { if (e.target === modal) closeModal(); });
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && modal.classList.contains("open")) closeModal();
    });

    // init
    render("overview");
  </script>
</body>
</html>
